<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--    DASHBOARD-->
    <servlet>
        <servlet-name>Dashboard</servlet-name>
        <jsp-file>/dashboard.jsp</jsp-file>
    </servlet>


    <servlet-mapping>
        <servlet-name>Dashboard</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>dashboard</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>TaskController</servlet-name>
        <servlet-class>ats.controllers.TaskController</servlet-class>
    </servlet>

    <!--    tasks list page-->
    <servlet-mapping>
        <servlet-name>TaskController</servlet-name>
        <url-pattern>/tasks</url-pattern>
    </servlet-mapping>

    <!--    create task page-->
    <servlet-mapping>
        <servlet-name>TaskController</servlet-name>
        <url-pattern>/task/*</url-pattern>
    </servlet-mapping>


    <!--    Employee Servlet-->
    <servlet>
        <servlet-name>EmployeesController</servlet-name>
        <servlet-class>ats.controllers.EmployeesController</servlet-class>
    </servlet>


    <!--    GET ALL EMPLOYEES-->
    <servlet-mapping>
        <servlet-name>EmployeesController</servlet-name>
        <url-pattern>/employees</url-pattern>
    </servlet-mapping>


    <!--    EMPLOYEE MAINTENANCE-->
    <servlet-mapping>
        <servlet-name>EmployeesController</servlet-name>
        <url-pattern>/employee/*</url-pattern>
    </servlet-mapping>


</web-app>